<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
        .verticalPanel {
			padding: 20px;
			width:100%;
			height:100%;
        }
        .scrollPanel {
			width:100%;
			height:100%;
		}
		.stackLayoutPanel {
			width:100%;
		}
		.resultLabel {
			width:100%;
			height:20px;
		}
	</ui:style>
         <g:VerticalPanel styleName="{style.verticalPanel}">
           <g:cell height="40px">
             <g:Label ui:field="resultText" styleName="{style.resultLabel}"></g:Label> 
           </g:cell>
 		   <g:cell height="100%">
          	  <g:ScrollPanel addStyleNames="{style.scrollPanel}">
          	 	<g:StackLayoutPanel unit='PX' ui:field="stackLayoutPanel" styleName="{style.stackLayoutPanel}" ></g:StackLayoutPanel>
          	  </g:ScrollPanel>
           </g:cell>
         </g:VerticalPanel>
</ui:UiBinder> 