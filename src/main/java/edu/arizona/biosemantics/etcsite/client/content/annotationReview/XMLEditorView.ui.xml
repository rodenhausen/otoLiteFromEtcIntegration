<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.verticalPanel {
			width:100%;
			height:100%;
			padding-right: 20px;
			padding:20px;
		}
		.textArea {
			height: 100%;
			width: 100%;
		}
		.horizontalPanel {
			height:30px;
			margin-left: auto;
			margin-right: auto;
		}
	</ui:style>
	<g:VerticalPanel addStyleNames="{style.verticalPanel}">	
		<g:cell height="100%">
			<g:RichTextArea ui:field="textArea" addStyleNames="{style.textArea}"></g:RichTextArea>
		<!--  <g:TextArea ui:field="textArea" addStyleNames="{style.textArea}"></g:TextArea> -->
		</g:cell>
		<g:cell height="30px">
			<g:HorizontalPanel addStyleNames="{style.horizontalPanel}">
				<g:Button ui:field="validateButton">Validate</g:Button>
				<g:Button ui:field="saveButton">Save</g:Button>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 