<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:edu.arizona.biosemantics.etcsite.client.common">
	<ui:style>
		.clickable {
			cursor:pointer;
		}
		.textLabelPadding {
			padding:7px;
		}
		.imageLabelPadding {
			padding:7px;
		}
		
	</ui:style>
	<g:HTMLPanel>
	
		<table align="left">
			<tr>
				
				<td class="{style.clickable} {style.imageLabelPadding}">
					<my:ImageLabel ui:field="home" imagePath="images/Home.gif" imageWidth="20px" imageHeight="20px" text="Home"></my:ImageLabel>
				</td>
				
				<!-- About ETC -->
				<td class="{style.clickable} {style.imageLabelPadding}">
					<my:ImageLabel ui:field="about" imagePath="images/About.gif" imageWidth="20px" imageHeight="20px" text="About ETC"></my:ImageLabel>  
				</td>
				
				<!-- News -->
				<td class="{style.clickable} {style.imageLabelPadding}">
					<my:ImageLabel ui:field="news" imagePath="images/News.gif" imageWidth="20px" imageHeight="20px" text="News"></my:ImageLabel>  
				</td>	
				
				<table align="right">
					<tr>
						<td class="{style.clickable} {style.textLabelPadding}">
							<g:Label text="Sign in" ui:field="loginLabel" height="22px"></g:Label>
						</td>
							
						<td class="{style.textLabelPadding}">
							<g:Label text="&nbsp;" height="22px"></g:Label>
						</td>
						
						<td class="{style.clickable} {style.imageLabelPadding}">
							<my:ImageLabel imagePath="images/Help.gif" imageWidth="20px" imageHeight="20px" text="Getting Started" ui:field="help"></my:ImageLabel>
						</td>
					</tr>
				</table>
				
			</tr>
		</table>
		
	</g:HTMLPanel>
</ui:UiBinder> 
