<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:lay="urn:import:edu.arizona.biosemantics.etcsite.client.layout">
	<ui:style>
		.padding{
			padding-top: 10px;
			padding-bottom: 10px;
		}
		.important{
			font-weight:bold;
		}
	</ui:style>
	<lay:CenteredContentPanel>
		<g:VerticalPanel>
		    <g:Label styleName="siteHeading">ETC Toolbox Development News</g:Label>
		    
		    <g:VerticalPanel styleName="{style.padding}">
		       <g:InlineLabel>The development schedule of the ETC toolbox is shown below. </g:InlineLabel>
		    	<g:FlowPanel><g:InlineLabel>Feature requests, bug reports,  and usability issue reports are accepted at&nbsp;</g:InlineLabel>
		    		<g:Anchor href="https://github.com/biosemantics/etc-site/issues?state=open" target="_blank">&nbsp;the ETC GitHub issue tracker</g:Anchor>
		    		<g:InlineLabel>.</g:InlineLabel>
		       </g:FlowPanel>
		    </g:VerticalPanel>
		    
		    <g:VerticalPanel styleName="{style.padding}">
				<g:Grid>
									<g:row>
										<g:cell styleName="{style.important}">Date</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:cell styleName="{style.important}">Features</g:cell>
									</g:row> 
									<g:row>
										<g:cell>
											Jul 31, 2014
										</g:cell>
										<g:cell>&nbsp;</g:cell>	
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											        Beta release of the Text Capture tool.
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
									<!--a new row -->
									<g:row>
										<g:cell>
											
										</g:cell>
										<g:cell>&nbsp;</g:cell>
										<g:customCell>
											<g:VerticalPanel>
											    <g:InlineLabel>
											        
											    </g:InlineLabel>
											</g:VerticalPanel>
										</g:customCell>
									</g:row>
				</g:Grid> 
		    </g:VerticalPanel>
		    
		</g:VerticalPanel>
	</lay:CenteredContentPanel>
</ui:UiBinder> 